#!/usr/bin/env python3
from pymongo import MongoClient
// Script to create or use the database 'my_db'.


def create_or_use_database(client, db_name):
    """
    Create or use a database in MongoDB.
    """
    db = client[db_name]
    # Checks if the database exists by listing databases
    db_list = client.list_database_names()
    if db_name in db_list:
        print(f"Database '{db_name}' already exists.")
    else:
        print(f"Database '{db_name}' was created.")
    return db


def main():
    """
    Main function to connect to MongoDB and create or use the database 'my_db'.
    """
    uri = "mongodb://localhost:27017"
    client = MongoClient(uri)
    db_name = "my_db"
    create_or_use_database(client, db_name)

    client.close()


if __name__ == "__main__":
    main()
