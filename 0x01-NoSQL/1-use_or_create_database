// This script creates or uses the database 'my_db'.
const dbName = "my_db";

// Switch to the 'my_db' database or create it if it doesn't exist
db = db.getSiblingDB(dbName);

// Verify the active database
print(`Using database: ${db.getName()}`);

// Optionally, you can create a collection to ensure the database persists
db.createCollection("example_collection");

// Confirm creation of the collection
print(`Collection 'example_collection' created or already exists.`);
