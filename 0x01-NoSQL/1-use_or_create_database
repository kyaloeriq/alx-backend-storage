// This script creates or uses the database 'my_db'.
const dbName = "my_db";

// Switch to the 'my_db' database or create it if it doesn't exist
db = db.getSiblingDB(dbName);

// Verifies the active database
print(`switched to db ${db.getName()}`);

// Optionally checks if the collection exists before creating it
if (!db.getCollectionNames().includes("example_collection")) {
    db.createCollection("example_collection");
}
